<!-- it will list all schedules  -->
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="/styles.css" />
</head>

<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main>
        <table>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Day</th>
                <th>Start at</th>
                <th>End at</th>
            </tr>
            <% for (let i=0; i < schedules.length; i++) {%>
                <tr>
                    <td>
                        <%=schedules[i].id%>
                    </td>
                    <td>
                        <%=`${schedules[i].firstname} ${schedules[i].lastname}`%>
                    </td>
                    <td>
                        <%=schedules[i].day%>
                    </td>
                    <td>
                        <%=schedules[i].start_at%>
                    </td>
                    <td>
                        <%=schedules[i].end_at%>
                    </td>
                </tr>
                <%}%>
        </table>
    </main>
</body>

</html>