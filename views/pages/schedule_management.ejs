<!-- it will list all schedules and to add a schedule  -->
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="css/styles.css" />
</head>

<body>
    <div class="background">
        <header>
            <%- include('../partials/header') %>
        </header>
        <main class="w-100 d-flex flex-column align-items-center justify-content-center">
            <form method="POST" action="/schedules" class="schedule_form">
                <div class="form-group">
                    <label for="user_id">User Id</label>
                    <input type="number" class="form-control" id="user_id" name="user_id" required>
                </div>
                <div class="form-group">
                    <label for="day">Day</label>
                    <!-- <input type="number" id="day" name="day"> -->
                    <select class="form-control" name="day" id="day">
                        <option value="Monday" selected>Monday</option>
                        <option value="Tuesday">Tuesday</option>
                        <option value="Wednesday">Wednesday</option>
                        <option value="Thursday">Thursday</option>
                        <option value="Friday">Friday</option>
                        <option value="Saturday">Saturday</option>
                        <option value="Sunday">Sunday</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="start_at">Start Time</label>
                    <input type="text" class="form-control" id="start_at" name="start_at">
                </div>
                <div class="form-group">
                    <label for="end_at">End Time</label>
                    <input type="text" class="form-control" id="end_at" name="end_at">
                </div>
                <button type="submit" class="btn btn-primary">Add New Schedule</button>
            </form>

            <table class="w-75 shadow-lg rounded-borders bg-white">
                <tr class="p-3 text-center text-white bg-dark">
                    <th class="p-3 label-spacing round-top-left">User ID</th>
                    <th class="p-3 label-spacing">NAME</th>
                    <th class="p-3 label-spacing">DAY</th>
                    <th class="p-3 label-spacing">START AT</th>
                    <th class="p-3 label-spacing round-top-right">END AT</th>
                </tr>
                <% for (let i=0; i < schedules.length; i++) {%>
                    <tr>
                        <td>
                            <%=schedules[i].id%>
                        </td>
                        <td>
                            <%=`${schedules[i].firstname} ${schedules[i].lastname}`%>
                        </td>
                        <td>
                            <%=schedules[i].day%>
                        </td>
                        <td>
                            <%=schedules[i].start_at%>
                        </td>
                        <td>
                            <%=schedules[i].end_at%>
                        </td>
                    </tr>
                    <%}%>
            </table>
        </main>
</body>

</html>